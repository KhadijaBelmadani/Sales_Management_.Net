<!-- _CategoryPartial.cshtml -->

@model List<SiteDeVente.Models.Categorie>

@if (Model != null)
{
    <div class="d-flex flex-wrap">
        @foreach (var category in Model)
        {
            <div class="col-lg-4 col-md-6 pb-1 flex-fill">
                <div class="cat-item d-flex flex-column border mb-4" style="padding: 30px;">
                    <p class="text-right">@((category.Produits != null) ? category.Produits.Count() : 0) Produits</p>
                    <a href="" class="cat-img position-relative overflow-hidden mb-3">
                        <img class="img-fluid" src="~/@category.image" alt="">
                    </a>
                    <h5 class="font-weight-semi-bold m-0">@category.nom</h5>
                    <!-- Vous pouvez retirer l'attribut spécifique ici -->
                </div>
            </div>
        }
    </div>

}