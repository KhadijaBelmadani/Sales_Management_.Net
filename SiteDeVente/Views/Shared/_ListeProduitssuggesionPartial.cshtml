@model IEnumerable<SiteDeVente.Models.Produit>

<div class="container-fluid py-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Autres produits qui pourraient vous intéresser</span></h2>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel related-carousel">
                @foreach (var produit in Model)
                {
                    <div class="card product-item border-0" style="height: 550px;">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                            <img class="img-fluid w-100" src="/..@produit.image" alt="">
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3">@produit.nom</h6>
                            <div class="d-flex justify-content-center">
                                @if (produit.pourcentageSolde != 0)
                                {
                                    <h6>@produit.prixNouveau Dh</h6><h6 class="text-muted ml-2"><del>@produit.prix Dh</del></h6>
                                }
                                else
                                {
                                    <h6>@produit.prix Dh</h6>
                                }
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="@Url.Action("Details", "Home", new { id = produit.idProduit })" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Voir Détails</a>
                            <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-heart text-primary"></i>Ajouter favoris</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Products End -->

<script>$(document).ready(function () {
        $(".related-carousel").owlCarousel({
            items: 3, // You can adjust the number of items displayed
            loop: true,
            margin: 15,
            responsiveClass: true,
            responsive: {
                0: {
                    items: 1,
                    nav: true
                },
                600: {
                    items: 2,
                    nav: false
                },
                1000: {
                    items: 3,
                    nav: true,
                    loop: false
                }
            }
        });
    });</script>